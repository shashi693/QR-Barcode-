<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backscan"
    tools:context="com.avenueinfotech.barcodereader.MainActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="53dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/status_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/linearLayout3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/colorError" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_marginLeft="50dp"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textColor="@android:color/holo_orange_dark" />

        <!--<TextView-->
            <!--android:id="@+id/status_message"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->

            <!--android:textColor="@android:color/holo_red_dark" />-->



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">




        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/read_barcode"-->
            <!--android:id="@+id/read_barcode"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true" />-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_flash"
        android:id="@+id/use_flash"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

        <CheckBox
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/auto_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:text="@string/auto_focus" />

    </LinearLayout>

    <!--<ImageButton-->
        <!--android:id="@+id/imageButton4"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/linearLayout3"-->
        <!--android:layout_alignLeft="@+id/barcode_value"-->
        <!--android:layout_alignStart="@+id/barcode_value"-->
        <!--android:layout_marginBottom="38dp"-->
        <!--app:srcCompat="@drawable/scanbtnqr" />-->

    <ImageButton
        android:id="@+id/read_barcode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/scnbtn" />

</RelativeLayout>
